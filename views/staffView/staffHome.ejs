<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Homepage</title>
    <!-- <link rel="stylesheet" href="/public/css/staffHome.css"> -->
</head>
<body>
    <%-include('../partials/header')%>

    <div class="text-center">
        <h2>Order List</h2>
        <img src="/public/images/cooking.png" alt="icon-cooking" width="100px">
    </div>

    <div class="containOrder">
        <table class="table">
            <tr class="">
                <th>Order #.</th>
                <th>Status</th>
                <th>Customer Name</th>
                <th>Order Items</th>
            </tr>
            <tbody>
             <% orders.forEach((order, index) => { %> 
                <tr class="">
                    <td><%= index %></td>
                    <td><%= order.status %></td>
                    <td><%= order.fullname %></td>
                    <td>
                        <ul>
                            <% order.items.forEach( item => { %> 
                                <li><%= item.name %> : <%= item.note %></li>
                            <% }) %>
                        </ul>
                    </td>
                </tr>
            <%})%>
            </tbody>
      
        </table>
    </div>
    
</body>
</html>